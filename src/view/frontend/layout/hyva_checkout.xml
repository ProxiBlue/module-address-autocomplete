<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="after.body.start">
            <block name="customer_address_autocomplete"
                   ifconfig="shipping/shipper_autocomplete/active"
                   template="ShipperHQ_AddressAutocomplete::hyva_checkout/autocomplete.phtml"
                   cacheable="true" after="customer_address_edit">
                <arguments>
                    <argument name="view_model" xsi:type="object">ShipperHQ\AddressAutocomplete\ViewModel\Autocomplete</argument>
                    <argument name="is_hyva_checkout" xsi:type="boolean">true</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
